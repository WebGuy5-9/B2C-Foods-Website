<style>
  .animated-card {
  opacity: 0;
  transform: translateY(20px) scale(1); /* Start at normal scale */
  transition:
    opacity 0.7s ease-out,
    
}

#services-grid.cards-visible .animated-card {
  opacity: 1;
  transform: translateY(0) scale(1); /* Ensure scale stays consistent */
}

</style>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const grid = document.getElementById("services-grid");

    if (!grid) return;

    const observer = new IntersectionObserver(
      (entries, observer) => {
        const entry = entries[0];

        if (entry.isIntersecting) {
          // 1. Add the visible class for fade/translate effect
          entry.target.classList.add("cards-visible");

          // 2. Trigger shimmer on all cards simultaneously
          const shimmers = entry.target.querySelectorAll(".shimmer-light");
          shimmers.forEach((shimmer) => {
            shimmer.classList.add("animate");

            // Remove the animation class after it's done (optional)
            shimmer.addEventListener("animationend", () => {
              shimmer.classList.remove("animate");
            }, { once: true });
          });

          // 3. Stop observing to trigger only once
          observer.observe(entry.target);
        }
      },
      {
        threshold: 0.2,
      }
    );

    observer.observe(grid);
  });
</script>

