<section id="contact" class="bg-gray-50 py-16">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <div class="text-center mb-12">
      <h2 class="text-4xl font-bold tracking-tight text-gray-900 sm:text-5xl" style="font-family: 'Poppins'">
        Stay Updated
      </h2>
      <div class="w-28 h-1 mx-auto mt-4 bg-yellow-500 rounded"></div>
      <p class="mt-6 max-w-2xl mx-auto text-lg sm:text-xl text-gray-600">
        Subscribe to our newsletter for the latest updates on projects and innovations.
      </p>
    </div>

    <form 
      class="grid grid-cols-1 sm:grid-cols-2 gap-6 sm:gap-8"
      onsubmit="return handleSubscribe(event)"
    >
      <!-- Full Name -->
      <div class="relative w-full">
        <input 
          type="text" 
          name="fullName" 
          placeholder="Full Name*"
          required
          class="w-full pl-4 pr-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-600 bg-gray-50 transition"
        />
      </div>

      <!-- Email -->
      <div class="relative w-full">
        <input 
          type="email" 
          name="email" 
          placeholder="Email Address*"
          required
          class="w-full pl-4 pr-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-600 bg-gray-50 transition"
        />
      </div>

      <!-- Company Name -->
      <div class="relative w-full">
        <input 
          type="text" 
          name="company" 
          placeholder="Company Name"
          class="w-full pl-4 pr-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-600 bg-gray-50 transition"
        />
      </div>

      <!-- Job Role -->
      <div class="relative w-full">
        <input 
          type="text" 
          name="jobRole" 
          placeholder="Job Role"
          class="w-full pl-4 pr-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-600 bg-gray-50 transition"
        />
      </div>

      <!-- Services Dropdown -->
      <div class="relative w-full sm:col-span-2">
        <select
          name="service"
          class="w-full pl-4 pr-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-600 bg-gray-50 transition"
        >
          <option value="">Select a Service of Interest</option>
          <option value="foodProcessing">Food Processing Consultancy</option>
          <option value="warehouse">Warehouse & Cold Storage</option>
          <option value="packhouse">Packhouse Solutions</option>
          <option value="agriDrones">Agri Drone Services</option>
        </select>
      </div>

      <!-- Description Box -->
      <div class="relative w-full sm:col-span-2">
        <textarea
          name="description"
          rows="4"
          placeholder="Tell us more about your interest..."
          class="w-full pl-4 pr-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-600 bg-gray-50 transition resize-none"
        ></textarea>
      </div>

      <!-- Submit Button -->
      <div class="sm:col-span-2 flex justify-center">
        <button 
          type="submit"
          class="bg-green-600 text-white px-8 py-3 rounded-lg font-medium hover:bg-green-700 transition duration-200 shadow-md hover:shadow-lg text-lg"
        >
          Subscribe
        </button>
      </div>
    </form>

    <!-- Error Message -->
    <div id="newsletter-error" class="text-red-500 text-sm mt-4 text-center hidden"></div>
  </div>
</section>

<script>
  function handleSubscribe(event) {
    event.preventDefault();

    const fullName = event.target.fullName.value.trim();
    const email = event.target.email.value.trim();
    const errorDiv = document.getElementById("newsletter-error");

    if (!fullName || !email) {
      errorDiv.textContent = "Please fill out all required fields correctly.";
      errorDiv.classList.remove("hidden");
      return false;
    }

    errorDiv.classList.add("hidden");
    alert("Subscribed successfully!");
    return true;
  }
</script>
