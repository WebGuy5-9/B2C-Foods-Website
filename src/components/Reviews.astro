---

<section class="relative py-24 bg-gray-50 flex items-center justify-center">
  <!-- Circle Container -->
  <div class="relative w-[1200px] h-[800px]">
    <!-- Center Title -->
    <div class="absolute inset-0 flex items-center justify-center text-center">
      <h2 class="text-3xl md:text-4xl font-bold text-green-900 leading-snug">
        Hear From Our <br /> Happy Customers
      </h2>
    </div>

    <!-- Cards Positioned Around Circle -->
    {reviews.map((review, i) => (
      <div
        class={`absolute top-1/2 left-1/2 w-52 p-4 rounded-2xl shadow-lg ${review.bg} ${review.rotate} -translate-x-1/2 -translate-y-1/2`}
        style={`transform: rotate(${i * (360 / reviews.length)}deg) translate(380px) rotate(-${i * (360 / reviews.length)}deg);`}
      >
        <p class="font-semibold mb-2">has been a game-changer for me.</p>
        <p class="text-sm opacity-90">{review.text}</p>
        <p class="mt-3 text-xs">{review.author} <br /> <span class="opacity-75">{review.role}</span></p>
      </div>
    ))}
  </div>
</section>
