---
const products = [
  {
    title: "Vegetable Set",
    image: "https://www.bbassets.com/media/uploads/p/l/40196714_2-haldirams-aloo-paratha.jpg", // replace with actual image path
    highlight: false,
  },
  {
    title: "Mixed set",
    image: "/fruit2.png",
    highlight: true,
  },
  {
    title: "Fruit Set",
    image: "/fruit3.png",
    highlight: false,
  },
];
---

<section id="ourproducts" class="bg-[#f9f8f4] py-20 px-6 sm:px-12 lg:px-20">
  <!-- Header -->
  <div class="text-center mb-12 max-w-2xl mx-auto">
    <p class="text-sm font-semibold tracking-wider uppercase text-gray-700">
      Our Products
    </p>
    <h2
      class="mt-6 text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl"
      style="font-family: 'Poppins'"
    >
      Experience Our Products
    </h2>

    <div class="w-24 h-1 mx-auto mt-4 bg-yellow-500 rounded"></div>
    <p class="mt-4 max-w-2xl mx-auto text-xl text-gray-600">
      Explore our variety of nutritious, organic foods - as fresh as it gets!
    </p>
  </div>

  <!-- Products Grid -->
  <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3 max-w-6xl mx-auto my-20">
    {products.map((product) => (
      <div class="text-center">
        <!-- Square Image Container -->
        <div class="aspect-w-1 aspect-h-1 w-full overflow-hidden rounded-lg shadow-sm bg-white">
          <img
            src={product.image}
            alt={product.title}
            class="w-full h-full object-cover"
          />
        </div>
        <!-- Title -->
        <h3
          class="mt-4 text-lg font-semibold text-gray-700"
          style="font-family: 'Poppins'"
        >
          {product.title}
        </h3>
      </div>
    ))}
  </div>

  <!-- CTA -->
  <div class="text-center">
              <a
                href="#contact"
                class="inline-block px-4 sm:px-6 py-2 sm:py-3 font-semibold bg-green-900 text-white transition border border-gray-400 rounded-full hover:bg-white hover:text-green-900 hover:border-green-900"
                style="font-family: 'Poppins'"
              >
                Visit our Food Store
              </a>
  </div>
</section>
